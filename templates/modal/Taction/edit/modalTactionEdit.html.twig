<!-- Modal -->
<div class="modal fade" id="Taction-edit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <form  onsubmit="return false" id="Taction-edit" name="Taction-edit" action="" method="post" enctype="multipart/form-data">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modifier L'action</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body ">

                <div class="alert alert-success success-add mb-2" role="alert">
                    <i class="fas fa-check"></i> Bien modifié
                </div>

                 <div class="form-group  mt-3">
                        <input type="text" name="id" hidden id="id">
                </div>

                <div class="form-group  mt-3">
                        <input type="text" name="taction[intitule]" class="form-control border-info" id="action-intitule" placeholder="Saisir l'intitulé du fichier">
                </div>
                <div class="text-danger intitule error-custom mt-2" role="alert">
                     <i class="fas fa-exclamation-triangle"></i>
                </div>

                <div class="form-group  mt-3" id="action-typeAction"> 

                    <select  id="typeAction" name="taction[Taction]" class="form-control border-info" >
                    <option value="1">Pour action</option>
                    <option value="2">Pour information</option>
                    </select>

                </div>

                <div class="text-danger Taction error-custom mt-2" role="alert">
                     <i class="fas fa-exclamation-triangle"></i>
                </div>

                <div class="form-group  mt-3" id="action-urgence">
                
                    <select  id="urgence"  name="taction[etatUrgence]" class="form-control  border-info">
                    <option value="1">Standart</option>
                    <option value="2">Urgente</option>
                    <option value="3">Trés urgente</option>
                    <option value="4">Extrêmement urgent</option>
                    </select>

                </div>

                <div class="text-danger etatUrgence error-custom mt-2" role="alert">
                     <i class="fas fa-exclamation-triangle"></i>
                </div>
                

                <input type="hidden" id="taction__token" name="taction[_token]" value="{{ csrf_token('taction') }}">

            </div>
            <div class="modal-footer">

                <button type="submit" class="btn btn-info btn-sm  button-size enregistrer-action">enregistrer</button>
                <div class="loader"></div>
                <button type="button" class="btn btn-danger  btn-sm  button-size fermer-modal" data-dismiss="modal">Fermer</button>

            </div>
        </div>
    </form>

  </div>
</div>
<!-- modal -->